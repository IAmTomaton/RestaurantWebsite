extends layout

block content
  h1 #{title}

  form(method='POST' action='')
    div.form-group
      label(for='number') Number:
      input#number.form-control(type='number' placeholder='Number' name='number' required='true' value=(undefined===table ? 0 : table.number) )
    button.btn.btn-primary(type='submit') Submit

  if errors
   ul
    for error in errors
     li!= error.msg